	accel_profile "flat"
}

# Idle handling
exec swayidle -w \
    timeout 300 '~/.config/swaylock/swaylock.sh' \
    timeout 600 'swaymsg "output * dpms off"' \
        resume 'swaymsg "output * dpms on"' \
    before-sleep '~/.config/swaylock/swaylock.sh'

